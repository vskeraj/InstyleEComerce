{
  "name": "ECOM",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "turbo run clean",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "backup:postgres": "./scripts/backup.sh postgres",
    "backup:mongodb": "./scripts/backup.sh mongodb",
    "restore:postgres": "./scripts/restore.sh postgres",
    "restore:mongodb": "./scripts/restore.sh mongodb",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@playwright/test": "^1.48.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1",
    "supertest": "^6.3.3",
    "@types/node": "^20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
